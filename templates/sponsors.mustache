{{!
    @template block_sponsors/sponsors

    This template renders the main content area for the mcms block.

    Example context (json):
    {
    'orgs' => [{
           'link' => 'urllink...',
           'logourl' => 'urllink...',
           'name' => 'orgname'

    }],
    'count' => 1
    }
}}
<div class="container">
    <div class="row">
        {{# orgs}}
            <div class="col-12 col-md-6">
                <a href="{{link}}">
                    <img class="img-fluid p-2 m-2" src="{{ logourl }}" role="presentation"
                         alt="{{ name }}">
                </a>
            </div>
        {{/ orgs}}
    </div>
</div>